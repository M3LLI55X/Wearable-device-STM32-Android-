<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/ico1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@mipmap/img1" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/userId"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--第一行-->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="账 号"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/maintelephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入您的手机号" />

            <TextView />
        </TableRow>

        <!--第二行-->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="密 码:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/mainpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入6-16位数字或字母" />

            <TextView />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/mainalter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="使用短信登录"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/remember_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></CheckBox>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="记住密码"

                    android:textSize="12sp" />
            </LinearLayout>
        </TableRow>

        <!--第三行-->


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="34dp"
                android:layout_height="wrap_content" />

            <TextView />

            <Button
                android:id="@+id/deng_lu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#33FFFF"
                android:text="登 录" />

            <TextView />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView />

            <TextView
                android:id="@+id/mainzhu_ce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户注册？"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent" />

            <TextView />

            <TextView
                android:id="@+id/wang_mima"
                android:gravity="right"
                android:text="忘记密码？"
                android:textColor="#33FFCC" />

            <TextView />
        </TableRow>
    </TableLayout>

</LinearLayout>